<Window
    x:Class="Kaitos2._0.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Kaitos2._0.Views"
    Title="Kaitos 2.0"
    MinWidth="1024"
    MinHeight="768"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <!--  Status bar  -->
        <views:StatusBarUserControl
            BorderBrush="Black"
            BorderThickness="1"
            DockPanel.Dock="Bottom" />
        <!--  Menu  -->
        <views:MenuUserControl
            BorderBrush="Black"
            BorderThickness="1,1,1,0"
            DockPanel.Dock="Left" />
        <!--  Content  -->
        <views:MainPanelUserControl BorderBrush="Black" BorderThickness="0,1,1,0" />
    </DockPanel>
</Window>
